Config { font = "xft:Ubuntu Mono:weight=bold:pixelsize=12:antialias=true:hinting=true"
       , additionalFonts = ["xft:FontAwesome:pixelsize=10"
                           ,"xft:Mononoki Nerd Font Mono:pixelsize=20:antialias=true:hinting=true"]
       , borderColor = "black"
       , border = TopB
       , bgColor = "#282828"
       , fgColor = "grey"
       , alpha = 255
       , position = Static {xpos = 0, ypos = 0, width = 1280, height = 20}
       , textOffset = -2
       , iconOffset = -10
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "/home/chetj/.xmonad/xpm/"
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Cpu ["-t", "<fn=1>\xf108</fn> cpu: (<total>%)", "-H", "50", "--high", "red"] 50
                    , Run Memory ["-t", "<fn=1>\xf233</fn> mem: <used>M (<usedratio>%)"] 50
                    , Run DiskU [("/", "<fn=1>\xf0c7</fn> hdd: <free> free")] [] 600
                    , Run Date "%a %b%_d %Y (%H:%M)" "date" 300
                    , Run Com "/home/chetj/.xmonad/aptupdate.sh" [] "aptupdate" 36000
                    , Run Com "/home/chetj/.xmonad/network.sh" [] "network" 20
                    , Run Com "/home/chetj/.xmonad/brightnessLevel.sh" [] "brightness" 20
                    , Run Com "/home/chetj/.xmonad/volumeLevel.sh" [] "volume" 20
                    , Run Com "uname" ["-n","-o"] "" 0
                    , Run Com "echo" ["<fn=2>\xf32a</fn>"] "pop" 3600
                    , Run Com "echo" ["<fn=1>\xf185</fn>"] "mon" 3600
                    , Run Com "echo" ["<fn=1>\xf028</fn>"] "vol" 3600
                    , Run Com "echo" ["<fn=2>\xe73a</fn>"] "ubuntu" 3600
                    , Run Com "echo" ["<fn=1>\xf1eb</fn>"] "wifi" 3600
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " <box type=Bottom width=2 mb=2 color=#51afef><fc=#51afef>%pop% %uname%</fc></box> | <box type=Bottom width=2 mb=2 color=#d65d0e><fc=#d65d0e>%mon% %brightness%</fc></box> | <box type=Bottom width=2 mb=2 color=#98971a><fc=#98971a>%vol% %volume%</fc></box> }{| <box type=Bottom width=2 mb=2 color=#83a598><fc=#83a598>%ubuntu% %aptupdate%</fc></box> | <box type=Bottom width=2 mb=2 color=#b16286><fc=#b16286>%cpu%</fc></box> | <box type=Bottom width=2 mb=2 color=#98971a><fc=#98971a>%memory%</fc></box> | <box type=Bottom width=2 mb=2 color=#d79921><fc=#d79921>%disku%</fc></box> | <box type=Bottom width=2 mb=2 color=#689d6a><fc=#689d6a>%wifi% %network%</fc></box> | <box type=Bottom width=2 mb=2 color=#d65d0e><fc=#d65d0e>%date%</fc></box> |  "
}
