Config { font = "xft:Ubuntu Mono:weight=bold:pixelsize=12:antialias=true:hinting=true"
       , additionalFonts = ["xft:FontAwesome:pixelsize=10"
                           ,"xft:Mononoki Nerd Font Mono:pixelsize=20:antialias=true:hinting=true"]
       , borderColor = "black"
       , border = TopB
       , bgColor = "#282828"
       , fgColor = "grey"
       , alpha = 255
       , position = Static {xpos = 0, ypos = 0, width = 1280, height = 20}
       , textOffset = -2
       , iconOffset = -10
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "/home/chetj/.xmonad/xpm/"
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Cpu ["-t", "<fn=1>\xf108</fn> cpu: (<total>%)", "-H", "50", "--high", "red"] 50
                    , Run Memory ["-t", "<fn=1>\xf233</fn> mem: <used>M (<usedratio>%)"] 50
                    , Run DiskU [("/", "<fn=1>\xf0c7</fn> hdd: <free> free")] [] 600
                    , Run Date "%a %b%_d %Y (%H:%M)" "date" 300
                    , Run Com "/home/chetj/.xmonad/aptupdate.sh" [] "aptupdate" 36000
                    , Run Com "/home/chetj/.xmonad/network.sh" [] "network" 10
                    , Run Com "/home/chetj/.xmonad/brightnessLevel.sh" [] "brightness" 5
                    , Run Com "/home/chetj/.xmonad/volumeLevel.sh" [] "volume" 5
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " <fc=#d65d0e>%brightness%</fc> | <fc=#98971a>%volume%</fc> }{| <fc=#83a598>%aptupdate%</fc> | <fc=#b16286>%cpu%</fc> | <fc=#98971a>%memory%</fc> | <fc=#d79921>%disku%</fc> | <fc=#689d6a>%network%</fc> | <fc=#d65d0e>%date%</fc> |  "
}
